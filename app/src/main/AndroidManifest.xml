<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.taaasty"
    tools:ignore="UnusedAttribute"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the author's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.screen.portrait" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />


    <application
        android:name=".TaaastyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.tabbar.LiveFeedActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.tabbar.SubscribtionsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tabbar.MyFeedActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginActivityTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <data android:scheme="vk3974615" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AdditionalMenuActivity"
            android:label="@string/title_activity_additional_menu"
            android:parentActivityName=".ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AdditionMenuActivityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name=".ui.post.ShowPostActivity"
            android:label="@string/title_activity_show_post"
            android:parentActivityName=".ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ShowPostTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name=".ui.UserInfoActivity"
            android:parentActivityName=".ui.post.ShowPostActivity"
            android:theme="@style/AppThemeDark" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.ShowPostActivity" />
        </activity>
        <activity
            android:name=".ui.relationships.FollowingFollowersActivity"
            android:label="@string/title_activity_following_followers"
            android:parentActivityName=".ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGreenActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name=".ui.photo.ShowPhotoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ui.feeds.TlogActivity"
            android:parentActivityName=".ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TlogActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name=".ui.post.CreatePostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CreatePostTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <activity android:name="com.vk.sdk.VKOpenAuthActivity" />

        <service
            android:name=".UploadService"
            android:exported="false" >
        </service>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data android:name="com.google.android.gms.analytics.globalConfigResource"
         android:resource="@xml/global_tracker"/>;

    </application>

</manifest>
