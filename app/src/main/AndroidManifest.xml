<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.taaasty"
    android:installLocation="auto"
    tools:ignore="UnusedAttribute" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- To auto-complete the email text field in the login form with the author's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <uses-feature android:name="android.hardware.screen.portrait" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:name="ru.taaasty.TaaastyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ru.taaasty.ui.tabbar.LiveFeedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDark"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="taaasty.com"
                    android:path="" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.taaasty.ui.tabbar.SubscriptionsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.taaasty.ui.tabbar.MyFeedActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.taaasty.ui.tabbar.NotificationsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/NotificationsActivityTheme" />
        <activity
            android:name="ru.taaasty.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/LoginActivityTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <data android:scheme="vk3974615" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.taaasty.ui.feeds.AdditionalFeedActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="ru.taaasty.ui.post.ShowPostActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_show_post"
            android:parentActivityName="ru.taaasty.ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/ShowPostTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.taaasty.ui.UserInfoActivity"
            android:parentActivityName="ru.taaasty.ui.post.ShowPostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UserInfoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.post.ShowPostActivity" />
        </activity>
        <activity
            android:name="ru.taaasty.ui.relationships.FollowingFollowersActivity"
            android:label="@string/title_activity_following_followers"
            android:parentActivityName="ru.taaasty.ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGreenActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name="ru.taaasty.ui.photo.ShowPhotoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="ru.taaasty.ui.feeds.TlogActivity"
            android:parentActivityName="ru.taaasty.ui.tabbar.MyFeedActivity"
            android:theme="@style/TlogActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name="ru.taaasty.RouteActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="taaasty.com"
                    android:pathPrefix="/~" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName="ru.taaasty.ui.tabbar.MyFeedActivity"
            android:screenOrientation="portrait"
            android:label="@string/activity_settings"
            android:theme="@style/AppThemeGreenActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.MyFeedActivity" />
        </activity>
        <activity
            android:name="ru.taaasty.ui.post.CreatePostActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/CreatePostTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".ui.post.CreateSharedPostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CreatePostTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.taaasty.ui.post.EditPostActivity"
            android:parentActivityName="ru.taaasty.ui.post.ShowPostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CreatePostTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.post.ShowPostActivity" />
        </activity>
        <activity
            android:name="ru.taaasty.ui.post.CreateAnonymousPostActivity"
            android:label="@string/title_anonymous_post"
            android:theme="@style/CreatePostTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name="com.vk.sdk.VKOpenAuthActivity" />
        <activity
            android:name="ru.taaasty.ui.post.SharePostActivity"
            android:theme="@style/SharePostTheme" >
        </activity>
        <activity
            android:name="ru.taaasty.ui.post.PostActionActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="ru.taaasty.ui.post.DeleteOrReportDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PostCommentActionActivityTheme" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/taaasty"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="ru.taaasty.ui.messages.ConversationActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_conversation"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/AppThemeOverlayingActionBar"
            android:parentActivityName="ru.taaasty.ui.tabbar.NotificationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.taaasty.ui.tabbar.NotificationsActivity" />
        </activity>

        <service
            android:name=".IntentService"
            android:exported="false" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--
        https://code.google.com/p/android/issues/detail?id=82157
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" /> -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <service
            android:name="ru.taaasty.PusherService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <service android:name=".GcmIntentService" />


        <!--
        ======================================================================
                                                AVIARY - REQUIRED ENTRIES
        ======================================================================
        -->
        <!--
         Cds Content Provider,
         NOTE that the "authorities" value MUST be formatted in this way:
         android:authorities="{your.packagename}.AviaryCdsProvider"
        -->
        <provider
            android:name="com.aviary.android.feather.sdk.internal.cds.AviaryCdsProvider"
            android:authorities="${applicationId}.AviaryCdsProvider"
            android:exported="false"
            android:process=":aviary_cds"/>
        <!--
        ======================================================================
                                                        END AVIARY ENTRIES
        ======================================================================
        -->



    </application>

</manifest>
