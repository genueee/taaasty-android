<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontPath" format="string" />

    <declare-styleable name="ParallaxScroll">
        <attr name="parallax_factor" format="float" />
        <attr name="inner_parallax_factor" format="float" />
        <attr name="parallax_views_num" format="integer" />
        <attr name="circular_parallax" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <attr name="cpsi_centered" format="boolean" />
    <attr name="cpsi_selectedColor" format="color" />
    <attr name="cpsi_strokeWidth" format="dimension" />
    <attr name="cpsi_unselectedColor" format="color" />

    <declare-styleable name="CirclePageStaticIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="cpsi_centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="cpsi_fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="cpsi_pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="cpsi_radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="cpsi_snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="cpsi_strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="cpsi_strokeWidth" />
        <!-- View background -->
        <attr name="android:background"/>

        <attr name="cpsi_count" format="integer"/>

        <attr name="cpsi_selected_item" format="integer"/>


    </declare-styleable>

    <declare-styleable name="ExtendedImageView">
        <attr name="android:foreground"/>
        <attr name="android:maxWidth"/>
        <attr name="android:maxHeight"/>
        <attr name="android:adjustViewBounds"/>
    </declare-styleable>

    <declare-styleable name="RelativeDateTextSwitcher">
        <attr name="isRelativeDateTimeFormat" format="boolean" />
        <attr name="dateFormatFlags" format="integer">
            <flag name="format_show_time" value="0x00001" />
            <flag name="format_show_weekday" value="0x00002" />
            <flag name="format_show_year" value="0x00004" />
            <flag name="format_show_date" value="0x00010" />
            <flag name="format_abbrev_time" value="0x04000" />
            <flag name="format_abbrev_weekday" value="0x08000" />
            <flag name="format_abbrev_month" value="0x10000" />
            <flag name="format_numeric_date" value="0x20000" />
            <flag name="format_abbrev_relative" value="0x04000" />
            <flag name="format_abbrev_all" value="0x80000" />
        </attr>
    </declare-styleable>

</resources>
