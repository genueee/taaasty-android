<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.FabMenu.ListItem" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/ProximaNova-Reg.otf</item>
    </style>

    <style name="FabMenuItem" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">right</item>
        <item name="android:minHeight">62dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.FabMenu.ListItem</item>
    </style>

    <style name="FabMenuItem.Land" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:minWidth">62dp</item>
    </style>

    <style name="FabMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fab_menu_dim</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/fab_menu_padding_bottom</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FabMenu.Land">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">80dp</item>
        <item name="android:gravity">bottom|right</item>
    </style>

</resources>