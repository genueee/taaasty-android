<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/feed_light_background_color</item>
        <item name="android:colorBackground">@color/feed_light_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/feed_light_background_color</item>
        <item name="vpiCirclePageIndicatorStyle">@style/LiveFeedCirclePageIndicator</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="android:windowBackground">@color/feed_dark_background_color</item>
        <item name="android:colorBackground">@color/feed_dark_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/feed_dark_background_color</item>
    </style>

    <style name="AppThemeLightActionBar" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionBarStyle">@style/ActionBar.Taaasty</item>>
    </style>

    <style name="AppThemeOverlayingActionBar" parent="AppThemeLightActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FullscreenThemeBase" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenTheme" parent="FullscreenThemeBase"/>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="CreatePostTheme" parent="AppThemeLightActionBar">

    </style>

    <style name="ShowPostTheme" parent="AppThemeOverlayingActionBar">
    </style>

    <style name="TlogActivity" parent="FullscreenThemeBase">
        <item name="android:actionBarStyle">@style/ActionBar.Taaasty.Transparent</item>>
    </style>


    <style name="ActionBar.Taaasty" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ActionBar.Taaasty.Transparent" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="NoFrameFloatingDialog" parent="android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.85</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeInAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="NoFrameDialog" parent="android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@color/no_frame_dialog_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="TabbarButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/btn_tabbar_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TabbarButton.First">
    </style>

    <style name="TabbarButton.Last">
    </style>

    <style name="TabbarButton.Action">
        <item name="android:background">@drawable/btn_tabbar_background_action</item>
    </style>


    <style name="LoginActivityTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AdditionMenuActivityTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.90</item>
    </style>

    <style name="LoginButtonContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">#fd0043</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="AdditionalMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@drawable/additional_menu_item_text_color</item>
    </style>

    <style name="UserInfoContentColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/clickable_item_background</item>
    </style>

    <style name="UserInfoContentValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/clickable_item_text_white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UserInfoContentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/clickable_item_text_semi_transparent_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textScaleX">0.95</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LiveFeedCirclePageIndicator">
        <item name="fillColor">#ffffffff</item>
        <item name="pageColor">#30ffffff</item>
        <item name="strokeColor">#00000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">2.5dp</item>
        <item name="centered">false</item>
    </style>

    <style name="LiveFeedCirclePageStaticIndicator">
        <item name="cpsi_fillColor">#ffffffff</item>
        <item name="cpsi_pageColor">#30ffffff</item>
        <item name="cpsi_strokeColor">#00000000</item>
        <item name="cpsi_strokeWidth">0dp</item>
        <item name="cpsi_radius">2.5dp</item>
        <item name="cpsi_centered">false</item>
    </style>

    <style name="PostTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
    </style>

    <style name="PostText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="PostQuoteSource">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
    </style>

    <style name="TextAppearanceSlugInlineBlack">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CreatePostScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="CreatePostEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:background">@null</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:minLines">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DialogFadeInAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
