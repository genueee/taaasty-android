<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/feed_light_background_color</item>
        <item name="android:colorBackground">@color/feed_light_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/feed_light_background_color</item>
        <item name="vpiCirclePageIndicatorStyle">@style/LiveFeedCirclePageIndicator</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>
        <item name="actionBarSize">52dp</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/feed_dark_background_color</item>
        <item name="android:colorBackground">@color/feed_dark_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/feed_dark_background_color</item>
    </style>

    <style name="AppThemeLightActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="actionBarStyle">@style/ActionBar.Taaasty</item>
        <item name="actionBarSize">52dp</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>
    </style>

    <style name="AppThemeGreenActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_white</item>
        <item name="actionBarStyle">@style/ActionBar.Taaasty.Green</item>
        <item name="actionBarSize">52dp</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item> <!-- списки в настройках -->
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>
    </style>

    <style name="AppThemeOverlayingGreenActionBar" parent="AppThemeGreenActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppThemeOverlayingActionBar" parent="AppThemeLightActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FullscreenThemeBase" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>
    </style>

    <style name="FullscreenTheme" parent="FullscreenThemeBase"/>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black_overlay</item>
    </style>

    <style name="CreatePostTheme" parent="AppThemeLightActionBar">
    </style>

    <style name="ShowPostTheme" parent="AppThemeOverlayingActionBar">
    </style>

    <style name="NotificationsActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
    </style>

    <style name="TlogActivityBase" parent="FullscreenThemeBase">
        <item name="actionBarStyle">@style/ActionBar.Taaasty.Transparent</item>>
    </style>

    <style name="TlogActivity" parent="TlogActivityBase">
        <item name="homeAsUpIndicator">@drawable/ic_back_white</item>
    </style>

    <style name="UserInfoActivity" parent="AppThemeDark">
    </style>

    <style name="ActionBar.Taaasty" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@android:color/white</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ActionBar.Taaasty.Transparent" parent="ActionBar.Taaasty">
        <item name="background">@android:color/transparent</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Taaasty.Green" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/green_background_normal</item>
        <item name="android:icon">@drawable/avatar_dummy_placeholder</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="PostCommentActionActivityTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.85</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeInAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="NoFrameDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/no_frame_dialog_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="FastReplyDialogTheme" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeInAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="TabbarButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/btn_tabbar_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TabbarButton.First">
    </style>

    <style name="TabbarButton.Last">
    </style>

    <style name="TabbarButton.Action">
        <item name="android:background">@drawable/btn_tabbar_background_action</item>
    </style>


    <style name="LoginActivityBaseTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorHint">@color/text_color_semi_semi_transparent_white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LoginActivityTheme" parent="LoginActivityBaseTheme"/>

    <style name="AdditionMenuActivityTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.90</item>
    </style>

    <style name="SharePostTheme" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.90</item>
    </style>

    <style name="LoginButtonContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">#fd0043</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="AdditionalMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@drawable/additional_menu_item_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="UserInfoContentColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="UserInfoContentValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/clickable_item_text_white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UserInfoContentTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/clickable_item_text_semi_transparent_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textScaleX">0.95</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LiveFeedCirclePageIndicator">
        <item name="fillColor">#ffffffff</item>
        <item name="pageColor">#30ffffff</item>
        <item name="strokeColor">#00000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">2.5dp</item>
        <item name="centered">false</item>
    </style>

    <style name="LiveFeedCirclePageStaticIndicator">
        <item name="cpsi_fillColor">#ffffffff</item>
        <item name="cpsi_pageColor">#30ffffff</item>
        <item name="cpsi_strokeColor">#00000000</item>
        <item name="cpsi_strokeWidth">0dp</item>
        <item name="cpsi_radius">2.5dp</item>
        <item name="cpsi_centered">false</item>
    </style>

    <style name="PostTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.PostSans</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
    </style>

    <style name="PostText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.PostSans</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="PostQuoteSource">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/feed_item_padding_right</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">@style/TextAppearance.PostSans</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:paddingLeft">@dimen/feed_item_padding_left</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:bufferType">spannable</item>
    </style>

    <style name="TextAppearanceSlugInlineBlack">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">fonts/ProximaNova-Bold.otf</item>
    </style>

    <style name="TextAppearanceSlugInlineWhite" parent="@style/TextAppearanceSlugInlineBlack">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearanceSlugInlineGreen" parent="@style/TextAppearanceSlugInlineBlack">
        <item name="android:textColor">@color/text_color_green</item>
    </style>

    <!-- Текст даты в комментарии на тёмном фоне -->
    <style name="TextAppearanceDateCommentInlineBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <!-- Текст даты в комментарии на светлом фоне -->
    <style name="TextAppearanceDateCommentInlineWhite">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b2b2b2</item>
    </style>

    <style name="CreatePostScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="CreatePostEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.PostSans</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:background">@null</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:minLines">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DialogFadeInAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PostButtonsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance.PostSans" parent="android:TextAppearance">
        <item name="fontPath">fonts/PTS55F_W.ttf</item>
    </style>

    <style name="TextAppearance.PostSans.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/PTS75F_W.ttf</item>
    </style>

    <style name="TextAppearance.PostSerif" parent="android:TextAppearance">
        <item name="fontPath">fonts/PTF55F_W.ttf</item>
    </style>

    <style name="TextAppearance.PostSerif.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/PTF75F_W.ttf</item>
    </style>

    <style name="NotificationsTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/ProximaNova-Reg.otf</item>
    </style>

    <style name="FollowingFollowersIndicatorItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/green_background_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textScaleX">0.95</item>
    </style>

    <style name="GreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/green_background_normal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textScaleX">0.95</item>
    </style>


    <style name="GridFeedText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">@dimen/feed_grid_item_padding_left</item>
        <item name="android:paddingRight">@dimen/feed_grid_item_padding_right</item>
