<RelativeLayout
    android:id="@+id/activityRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FollowingFollowersActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Taaasty.Toolbar.GreenActionBar.Flat"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        style="@style/GreenTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        tools:context="ru.taaasty.ui.relationships.FollowingFollowersActivity"/>

    <ru.taaasty.widgets.ErrorTextView
        android:id="@+id/error_text"
        style="@style/ErrorTextView"
        tools:text="Неправильный логин или пароль"/>
</RelativeLayout>
