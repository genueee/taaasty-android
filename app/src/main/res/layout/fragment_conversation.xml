<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.taaasty.ui.messages.ConversationActivity">

    <ru.taaasty.widgets.MyRecyclerView
        android:id="@+id/recycler_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="?actionBarSize"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/following_followers_horizontal_margin"
        android:paddingRight="@dimen/following_followers_horizontal_margin"
        android:scrollbars="none"
        android:smoothScrollbar="false"
        tools:listheader="@layout/header_user_feed"
        tools:listitem="@layout/conversation_my_message" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/empty_view"
        style="@style/EmptyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="@dimen/following_followers_horizontal_margin"
        android:layout_marginRight="@dimen/following_followers_horizontal_margin"
        android:text="@string/messages_will_be_displayed_here"
        android:visibility="gone" />

    <include
        android:id="@+id/reply_to_comment_container"
        layout="@layout/include_reply_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Taaasty.Toolbar.GreenActionBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <RelativeLayout
            android:id="@+id/header_group_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:background="@color/green_background_normal"
            tools:showIn="@layout/fragment_conversation">

            <RelativeLayout
                android:id="@+id/avatar_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ru.taaasty.widgets.ExtendedImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_in_actiobar_diameter"
                    android:layout_height="@dimen/avatar_in_actiobar_diameter"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:contentDescription="@string/open_user_tlog"
                    tools:src="@drawable/avatar_dummy" />
            </RelativeLayout>


            <ru.taaasty.widgets.LinkifiedTextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/avatar_container"
                android:layout_toRightOf="@+id/avatar_container"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="7"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/feed_white_text"
                android:textSize="15sp"
                tools:text="genue sf" />

            <ru.taaasty.widgets.LinkifiedTextView
                android:id="@+id/users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/feed_white_text"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="genue sf" />

            <TextView
                android:id="@+id/typing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="4dp"
                android:textColor="@color/feed_white_text"
                android:textSize="12sp"
                tools:text="typing"

                />
            <!--android:layout_alignLeft="@id/topic"-->

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</FrameLayout>