<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveFeedActivity"
    tools:ignore="MergeRootFrame">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/tabbarSize"
        tools:context="ru.taaasty.ui.relationships.FollowingFollowersActivity" />

    <ru.taaasty.widgets.ErrorTextView
        android:id="@+id/error_text"
        style="@style/ErrorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="Мазафака какая-то с сайтом"
        tools:visibility="visible" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circle_page_indicator"
        style="@style/LiveFeedCirclePageIndicator"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/live_feed_pager_indicator_top" />

    <fragment android:id="@+id/tabbar"
        android:name="ru.taaasty.ui.tabbar.TabbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:layout="@layout/tabbar" />

</FrameLayout>