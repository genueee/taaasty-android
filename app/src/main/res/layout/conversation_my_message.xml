<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginLeft="32dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/msg_out"
            android:textColor="#1b1b1b"
            tools:text="text блаблабла"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="2dp"
            android:minHeight="40dp"
            android:gravity="center_vertical" />

        <ru.taaasty.widgets.RelativeDateTextSwitcher
            android:id="@+id/relative_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_done_all_grey_10dp"
                android:textColor="#c9c9c9"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="24 ноября 15:55 X" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_done_all_grey_10dp"
                android:textColor="#c9c9c9"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:visibility="invisible"
                tools:text="24 ноября 15:55 X" />
        </ru.taaasty.widgets.RelativeDateTextSwitcher>

    </LinearLayout>

    <ru.taaasty.widgets.HintedExtendedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_small_diameter_42dp"
        android:layout_height="@dimen/avatar_small_diameter_42dp"
        android:contentDescription="@string/open_user_tlog"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="8dp"
        android:foreground="@drawable/clickable_item_circle_background"
        android:src="@drawable/avatar_dummy" />

</LinearLayout>