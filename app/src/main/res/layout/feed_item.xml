<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/avatar_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/feed_item_padding_left"
        android:paddingRight="@dimen/feed_item_padding_right"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_small_diameter"
            android:layout_height="@dimen/avatar_small_diameter"
            android:layout_gravity="center"
            android:src="@drawable/avatar_dummy"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="64dp"
            android:textColor="@color/text_color_feed_item_gray"
            android:textSize="14sp"
            tools:text="alyonaruban" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:contentDescription="@string/feed_item_image_content_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:visibility="invisible" />

    <ru.taaasty.widgets.EllipsizingTextView
        android:id="@+id/feed_item_title"
        style="@style/PostTitle"
        android:visibility="gone"
        tools:text="Ролики"
        android:textSize="28sp"
        android:textIsSelectable="false"
        tools:visibility="visible"/>

    <ru.taaasty.widgets.EllipsizingTextView
        android:id="@+id/feed_item_text"
        style="@style/PostText"
        tools:text="  Купил я короч себе ролики. Последний раз я на них катался лет в 9 примерно. Ну думаю похуй, вспомню. Ага. Ну стоять я могу и отталкиваться, но вот с бордюрами полный кабздец :D Уебался короч на переходе :D \n И еще я почувствовал всю боль девушек, потому что я упал прямо на ноготь правой руки большого пальца(я на гитарке играю, поэтому на правой руке ногти длинные). Это пиздец хд"
        android:textIsSelectable="false"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/source"
        style="@style/PostQuoteSource"
        android:lines="1"
        tools:text="Хенрик фексеус. &quot;Искусство манипуляции&quot;" />

    <include layout="@layout/include_post_bottom_action_bar"/>

</LinearLayout>