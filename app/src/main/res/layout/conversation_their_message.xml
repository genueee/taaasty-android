<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginRight="32dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ru.taaasty.widgets.HintedExtendedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_small_diameter_42dp"
        android:layout_height="@dimen/avatar_small_diameter_42dp"
        android:contentDescription="@string/open_user_tlog"
        android:clickable="true"
        android:foreground="@drawable/clickable_item_circle_background"
        android:src="@drawable/avatar_dummy"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_height="wrap_content">

        <info.piwai.android.JellyBeanSpanFixTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="@drawable/msg_in"
            android:textColor="#1b1b1b"
            tools:text="text блаблабла"
            android:gravity="center_vertical"
            android:layout_marginLeft="-4dp"
            android:minWidth="80dp"
            android:minHeight="40dp" />

        <ru.taaasty.widgets.RelativeDateTextSwitcher
            android:id="@+id/relative_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c9c9c9"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="24 ноября 15:55 X" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c9c9c9"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="24 ноября 15:55 X" />
        </ru.taaasty.widgets.RelativeDateTextSwitcher>

    </LinearLayout>

</LinearLayout>