<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    tools:context=".ui.ShowPostActivity">

    <!-- Картинка, либо embedd -->
    <FrameLayout
        android:id="@+id/dynamic_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="15dp"
        tools:visibility="visible"
        >

        <ViewStub
            android:id="@+id/image_stub"
            android:layout="@layout/post_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ViewStub
            android:id="@+id/youtube_view_stub"
            android:layout="@layout/post_item_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ViewStub
            android:id="@+id/web_view_stub"
            android:layout="@layout/post_item_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/dynamic_content_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/PostTitle"
        android:paddingLeft="@dimen/post_item_padding_left"
        android:paddingRight="@dimen/post_item_padding_right"
        tools:text="Ролики"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text"
        style="@style/PostText"
        android:paddingLeft="@dimen/post_item_padding_left"
        android:paddingRight="@dimen/post_item_padding_right"
        tools:text="  Купил я короч себе ролики. Последний раз я на них катался лет в 9 примерно. Ну думаю похуй, вспомню. Ага. Ну стоять я могу и отталкиваться, но вот с бордюрами полный кабздец :D Уебался короч на переходе :D \n И еще я почувствовал всю боль девушек, потому что я упал прямо на ноготь правой руки большого пальца(я на гитарке играю, поэтому на правой руке ногти длинные). Это пиздец хд" />

    <TextView
        android:id="@+id/source"
        style="@style/PostQuoteSource"
        android:focusable="true"
        android:clickable="true"
        android:longClickable="true"
        android:paddingLeft="@dimen/post_item_padding_left"
        android:paddingRight="@dimen/post_item_padding_right"
        tools:text="Хенрик фексеус. &quot;Искусство манипуляции&quot;" />

    <include
        layout="@layout/include_post_bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/post_item_likes_padding_left"
        android:layout_marginRight="@dimen/post_item_likes_padding_right" />

</LinearLayout>