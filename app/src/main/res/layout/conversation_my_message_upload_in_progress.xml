<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <info.piwai.android.JellyBeanSpanFixTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/msg_out"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:textColor="#1b1b1b"
            android:textIsSelectable="true"
            tools:text="text блаблабла" />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center" />
    </FrameLayout>
    <ru.taaasty.widgets.RelativeDateTextSwitcher
        android:id="@+id/relative_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_done_all_grey_10dp"
            android:textColor="#c9c9c9"
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            tools:ignore="SmallSp"
            tools:text="24 ноября 15:55 X"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_done_all_grey_10dp"
            android:textColor="#c9c9c9"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="24 ноября 15:55 X"
            tools:visibility="invisible"/>
    </ru.taaasty.widgets.RelativeDateTextSwitcher>

</LinearLayout>