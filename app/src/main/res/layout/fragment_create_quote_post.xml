<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CreatePostScrollView"
    tools:context="ru.taaasty.ui.post.CreateTextPostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="4dp">

        <EditText
            android:id="@+id/text"
            android:layout_marginTop="8dp"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/quote_text_hint"
            android:textSize="32sp"
            android:maxLength="499"
            style="@style/CreatePostEditText" />

        <EditText
            android:id="@+id/edit_quote_source"
            style="@style/CreatePostEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top|right"
            android:scrollHorizontally="false"
            android:hint="@string/quote_source_hint"
            android:minHeight="48dp"
            android:minLines="2"
            android:textSize="32sp"
            />
    </LinearLayout>
</ScrollView>



