<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="4dp"
    android:gravity="center_vertical"
    android:background="?selectableItemBackground"
    tools:ignore="UseCompoundDrawables">

    <ru.taaasty.widgets.HintedExtendedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_small_diameter"
        android:layout_height="@dimen/avatar_small_diameter"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="top"
        android:foreground="@drawable/clickable_item_circle_background"
        android:contentDescription="@string/open_user_tlog"
        android:clickable="true"
        android:src="@drawable/avatar_dummy" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ru.taaasty.widgets.LinkifiedTextView
            android:id="@+id/last_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1b1b1b"
            android:maxLines="7"
            android:ellipsize="end"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            tools:text="genue sf" />

        <ru.taaasty.widgets.RelativeDateTextSwitcher
            android:id="@+id/notification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#c9c9c9"
                android:textSize="15sp"
                tools:text="1 час назад" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#c9c9c9"
                android:textSize="15sp"
                tools:text="1 час назад" />

        </ru.taaasty.widgets.RelativeDateTextSwitcher>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ru.taaasty.widgets.SquareTextView
            android:id="@+id/unread_messages_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/conversations_list_unread_messages_background"
            android:gravity="center"
            android:maxWidth="5sp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            tools:text="100" />

        <View
            android:id="@+id/unreceived_messages_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            tools:visibility="visible"
            android:background="@drawable/conversations_has_unreceived_messages"
            />
    </FrameLayout>

</LinearLayout>