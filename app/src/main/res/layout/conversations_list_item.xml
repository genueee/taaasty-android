<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/following_followers_horizontal_margin"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:gravity="center_vertical"
    android:background="?selectableItemBackground"
    tools:ignore="UseCompoundDrawables">

    <ru.taaasty.widgets.HintedExtendedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_small_diameter"
        android:layout_height="@dimen/avatar_small_diameter"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="top"
        android:foreground="?selectableItemBackground"
        android:contentDescription="@string/open_user_tlog"
        android:clickable="true"
        android:src="@drawable/avatar_dummy" />

    <ru.taaasty.widgets.LinkifiedTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1b1b1b"
        android:maxLines="7"
        android:ellipsize="end"
        android:textSize="15sp"
        android:paddingBottom="4dp"
        android:theme="@style/ThemeTextViewFullHypernation"
        tools:text="genue sf или длиииииный сцуко титул поста"
        android:paddingRight="2dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginRight="90dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginRight="90dp">

        <ru.taaasty.widgets.HintedExtendedImageView
            android:id="@+id/message_avatar"
            android:layout_width="@dimen/avatar_small_diameter_24dp"
            android:layout_height="@dimen/avatar_small_diameter_24dp"
            android:foreground="@drawable/clickable_item_circle_background"
            android:contentDescription="@string/open_user_tlog"
            android:clickable="true"
            android:src="@drawable/avatar_dummy"
            android:layout_marginRight="5dp"/>

        <ru.taaasty.widgets.LinkifiedTextView
            android:id="@+id/last_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2b2b2b"
            android:maxLines="7"
            android:ellipsize="end"
            android:textSize="14sp"
            tools:text="genue sf"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <ru.taaasty.widgets.RelativeDateTextSwitcher
        android:id="@+id/notification_date"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/title"
        app:dateFormatFlags="format_numeric_date|format_abbrev_time">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#c9c9c9"
            android:textSize="15sp"
            android:textScaleX="0.92"
            android:layout_gravity="right"
            android:gravity="right"
            tools:text="1 час назад" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#c9c9c9"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:textScaleX="0.92"
            android:gravity="right"
            tools:text="1 час назад" />

    </ru.taaasty.widgets.RelativeDateTextSwitcher>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >

        <ImageView
            android:id="@+id/mute_off_indicator"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"
            android:tint="#c9c9c9"
            android:src="@drawable/ic_mute_off"
            android:visibility="invisible"
            tools:ignore="ContentDescription"
            tools:visibility="visible"/>

        <FrameLayout
            android:id="@+id/unread_messages_count_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ru.taaasty.widgets.SquareTextView
                android:id="@+id/unread_messages_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/conversations_list_unread_messages_background"
                android:gravity="center"
                android:maxWidth="5sp"
                android:minHeight="16dp"
                android:minWidth="16dp"
                android:padding="4dp"
                android:singleLine="true"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <View
                android:id="@+id/unreceived_messages_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/conversations_has_unreceived_messages"
                android:visibility="invisible"
                tools:visibility="visible"
                />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>