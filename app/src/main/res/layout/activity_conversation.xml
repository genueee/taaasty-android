<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TlogActivity"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="8dp"
        app:navigationContentDescription="@string/action_back_content_description"
        app:navigationIcon="@drawable/ic_back"
        app:theme="@style/ToolbarThemeDark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/semi_transparent_action_bar_dark">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:visibility="gone">

                <ru.taaasty.widgets.HintedExtendedImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_small_diameter"
                    android:layout_height="@dimen/avatar_small_diameter"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="top"
                    android:foreground="@drawable/clickable_item_circle_background"
                    android:contentDescription="@string/open_user_tlog"
                    android:src="@drawable/avatar_dummy"/>

                <ru.taaasty.widgets.LinkifiedTextView
                    android:id="@+id/topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/feed_white_text"
                    android:maxLines="7"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"
                    android:includeFontPadding="false"
                    tools:text="genue sf"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_alignTop="@+id/avatar"/>

                <ru.taaasty.widgets.LinkifiedTextView
                    android:id="@+id/users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="7"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/feed_white_text"
                    tools:text="genue sf"
                    android:layout_marginTop="2dp"
                    android:layout_alignLeft="@+id/topic"
                    android:layout_below="@+id/topic"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/header_chat_details">

                <ru.taaasty.widgets.LinkifiedTextView
                    android:id="@+id/recipient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/feed_white_text"
                    android:maxLines="7"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    tools:text="genue sf"/>

            </RelativeLayout>

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

</FrameLayout>