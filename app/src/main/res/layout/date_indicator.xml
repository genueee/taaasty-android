<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="120dp"
    android:paddingLeft="14dp"
    android:paddingRight="2dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    tools:background="@color/date_indicator_background">

    <TextView
        android:id="@+id/date_indicator_day"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textColor="@color/date_indicator_color"
        android:textSize="32sp"
        android:textScaleX="0.85"
        android:typeface="monospace"
        android:singleLine="true"
        android:includeFontPadding="false"
        tools:text="07"
        android:gravity="center" />

    <TextView
        android:id="@+id/date_indicator_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/date_indicator_color"
        android:paddingLeft="4dp"
        tools:text="сентября\nвоскресенье\n22:45"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:typeface="monospace"
        android:includeFontPadding="false"
        android:lines="3"
        android:linksClickable="false" />

</LinearLayout>