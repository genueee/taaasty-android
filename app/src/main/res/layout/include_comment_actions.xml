<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reply_to_comment"
        android:src="@drawable/ic_reply_to_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clickable_item_background"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/delete_comment"
        android:src="@drawable/ic_delete_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clickable_item_background"
        android:visibility="gone"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/report_to_moderator"
        android:src="@drawable/ic_report_to_moderator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clickable_item_background"
        android:padding="8dp" />


</LinearLayout>